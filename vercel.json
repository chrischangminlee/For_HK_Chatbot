{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node@2.15.10" },
    { "src": "web/package.json", "use": "@vercel/static-build@2.5.20", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}

